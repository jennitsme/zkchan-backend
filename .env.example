# Port backend
PORT=8080

# Frontend origin (boleh lebih dari satu, pisah koma)
CORS_ORIGIN=https://angy-frog.site,https://zk-chan.fun

# --- Solana side (untuk verifikasi / nanti dipakai agent) ---
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_POOL_ADDRESS=POOL_PUBLIC_KEY_HERE

# Kalau mau backend ikut verifikasi deposit on-chain nanti
SOLANA_VERIFY_DEPOSITS=false

# --- EVM side (untuk payout, optional) ---
EVM_RPC_URL=https://sepolia.infura.io/v3/_KEY_HERE
EVM_PRIVATE_KEY=
EVM_NATIVE_DECIMALS=18
ENABLE_EVM_SEND=false
